<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/arrowUp"
               motion:framePosition="40"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/arrowDown"
               motion:framePosition="90"
               android:alpha="1" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/view_article" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/almacen_opciones_filtrado"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/arrowUp"
            motion:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:alpha="0"
            motion:layout_constraintTop_toTopOf="@+id/view_article"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/arrowDown"
            motion:layout_constraintEnd_toStartOf="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:alpha="1"
            motion:layout_constraintTop_toTopOf="@+id/view_article"
            android:layout_marginTop="10dp" />
    </ConstraintSet>
</MotionScene>